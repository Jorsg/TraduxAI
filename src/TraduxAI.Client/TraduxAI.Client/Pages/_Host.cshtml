@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace TraduxAI.Client.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<base href="~/" />
	<link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
	<link href="css/site.css" rel="stylesheet" />
	<link href="TraduxAI.Client.styles.css" rel="stylesheet" />
	<link rel="icon" type="image/png" href="favicon.png" />
	<component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
	<component type="typeof(App)" render-mode="ServerPrerendered" />

	<div id="blazor-error-ui">
		<environment include="Staging,Production">
			An error has occurred. This application may no longer respond until reloaded.
		</environment>
		<environment include="Development">
			An unhandled exception has occurred. See browser dev tools for details.
		</environment>
		<a href="" class="reload">Reload</a>
		<a class="dismiss">🗙</a>
	</div>

	<script src="_framework/blazor.server.js">
				window.downloadFileFromStream = (fileName, contentType, base64String) => {
			// Crear un enlace de descarga
			const link = document.createElement('a');
			link.href = `data:${contentType};base64,${base64String}`;
			link.download = fileName;

			// Añadir a la página, hacer clic y eliminar
			document.body.appendChild(link);
			link.click();
			document.body.removeChild(link);
		}</script>
</body>
</html>
