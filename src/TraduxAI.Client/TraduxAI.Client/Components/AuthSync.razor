@using TraduxAI.Client.Providers
@inject AuthenticationStateProvider AuthProvider


@code {
	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender && AuthProvider is JwtAuthenticationStateProvider jwtProvider)
		{
			// Forzamos a notificar el nuevo estado a todos los componentes
			await jwtProvider.ForceAuthStateRefresh();
		}
	}
	
}
